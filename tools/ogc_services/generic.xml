<tool id="aquaInfra_ogc_api_processes" name="AquaINFRA services" version="0.1.0">
	<description>deployed as OGC API Processes</description>
	<macros>
		<import>macros.xml</import>
	</macros>
	<expand macro="requirements"/>
	<command detect_errors="exit_code"><![CDATA[
	Rscript '$__tool_directory__/generic.R'
		--server 'http://localhost:5000/'
		--outputData '$output_data'
]]></command>
	<configfiles>
		<inputs name="inputs" filename="inputs.json" data_style="paths"/>
	</configfiles>
	<inputs>
		<conditional name="conditional_process">
			<param name="select_process" type="select" label="Select process">
				<option value="points-att-polygon">points-att-polygon: points-att-polygon</option>
				<option value="peri-conv">peri-conv: peri-conv</option>
				<option value="mean-by-group">mean-by-group: mean-by-group</option>
				<option value="ts-selection-interpolation">ts-selection-interpolation: ts-selection-interpolation</option>
				<option value="trend-analysis-mk">trend-analysis-mk: trend-analysis-mk</option>
			</param>
			<when value="points-att-polygon">
				<param name="regions" label="regions" optional="false" help="astra" type="data" format="txt"/>
				<param name="points" label="points" optional="false" help="astra" type="data" format="txt"/>
				<param name="long_col_name" label="Column name for longitude" optional="true" help="astra" type="text"/>
				<param name="lat_col_name" label="Column name for latiitude" optional="true" help="astra" type="text"/>
			</when>
			<when value="peri-conv">
				<param name="input_data" label="Regions Shapefile" optional="true" help="TODO" type="data" format="txt"/>
				<param name="column" label="Points excel" optional="true" help="TODO" type="text"/>
				<param name="dates" label="Column name for longitude" optional="true" help="TODO" type="text"/>
				<param name="periods" label="Column name for latiitude" optional="true" help="TODO" type="text"/>
				<param name="someBoolean" label="Column name for latiitude" optional="true" help="TODO" type="boolean" truevalue="True" falsevalue="False"/>
			</when>
			<when value="mean-by-group">
				<param name="input_data" label="Regions Shapefile" optional="true" help="TODO" type="data" format="txt"/>
			</when>
			<when value="ts-selection-interpolation">
				<param name="in_data_path" label="Regions Shapefile" optional="true" help="TODO" type="data" format="txt"/>
				<param name="in_rel_cols" label="Points excel" optional="true" help="TODO" type="text"/>
				<param name="in_missing_threshold_percentage" label="Column name for longitude" optional="true" help="TODO" type="text"/>
				<param name="in_year_colname" label="Column name for latiitude" optional="true" help="TODO" type="text"/>
				<param name="in_value_colname" label="Column name for latiitude" optional="true" help="TODO" type="text"/>
				<param name="in_min_data_point" label="Column name for latiitude" optional="true" help="TODO" type="text"/>
			</when>
			<when value="trend-analysis-mk">
				<param name="in_data_path" label="Regions Shapefile" optional="true" help="TODO" type="data" format="txt"/>
				<param name="in_rel_cols" label="Points excel" optional="true" help="TODO" type="text"/>
				<param name="in_time_colname" label="Column name for longitude" optional="true" help="TODO" type="text"/>
				<param name="in_value_colname" label="Column name for latiitude" optional="true" help="TODO" type="text"/>
			</when>
		</conditional>
	</inputs>
	<outputs>
		<data name="output_data" format="txt" label="$select_process"/>
	</outputs>
	<expand macro="tests"/>
	<help>AquaINFRA</help>
	<expand macro="citations"/>
</tool>
